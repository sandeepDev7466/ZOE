<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:minWidth="@dimen/_240sdp">
    <com.ztp.app.Helper.MyHeadingTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="@string/update_hours"
        android:layout_gravity="center"
        style="@style/MediumTextView"
        android:background="@color/blue_light"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"/>

    <com.ztp.app.Helper.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter clock in &amp; clock out time"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/background_3"
        style="@style/RegularTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.ztp.app.Helper.MyTextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="50"
            android:layout_margin="@dimen/_10sdp">

            <com.ztp.app.Helper.MyTextInputEditText
                android:id="@+id/et_clockIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/clock_in"
                style="@style/RegularTextView"
                android:editable="false"/>
        </com.ztp.app.Helper.MyTextInputLayout>

        <com.ztp.app.Helper.MyTextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="50"
            android:layout_margin="@dimen/_10sdp">

            <com.ztp.app.Helper.MyTextInputEditText
                android:id="@+id/et_clockOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/clock_out"
                style="@style/RegularTextView"

                />
        </com.ztp.app.Helper.MyTextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <com.ztp.app.Helper.MyButton
            android:id="@+id/cancel"
            style="@style/MyGrayButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:layout_weight=".5"
            android:layout_margin="@dimen/_5sdp"/>

        <com.ztp.app.Helper.MyButton
            android:id="@+id/done"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textAllCaps="false"
            android:text="@string/done"
            android:gravity="center"
            android:layout_weight=".5"
            android:layout_margin="@dimen/_5sdp"/>

    </LinearLayout>

</LinearLayout>
