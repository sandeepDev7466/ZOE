<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_back_arrow"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:srcCompat="@drawable/thumbprints"/>

        <com.ztp.app.Helper.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zoe_thumbprint"
            android:textSize="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <com.ztp.app.Helper.MyTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/more_info"
            android:background="@color/blue_light"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/blue_light"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle_green"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp">


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/non_profit"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/yes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/no1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"/>

                    </LinearLayout>

                </LinearLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/services"
                    />

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etServices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/target_client"
                    />

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etTarget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/person"
                    />

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/time_period"
                    />

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etTimePeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/no_of_volunteer"
                    />

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etVolunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>


                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/policy_check"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/yes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/no2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"/>

                    </LinearLayout>

                </LinearLayout>

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/public_transport"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/yes3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/no3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"/>

                    </LinearLayout>

                </LinearLayout>

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/are_you_501c3_certified"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/yes4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".5">

                        <RadioButton
                            android:id="@+id/no4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp">

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/clear"
                    style="@style/MyGrayButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:text="@string/clear"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/register"
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>

