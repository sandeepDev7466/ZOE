<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_75sdp"
            android:background="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <com.ztp.app.Helper.MyHeadingTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/shift"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:background="@color/blue_light"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:orientation="horizontal"
                    android:weightSum="3.02">

                    <LinearLayout
                        android:id="@+id/edit_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit" />


                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="@string/edit"
                            android:textColor="@color/black" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.01"
                        android:layout_height="match_parent"
                        android:background="@color/background_3"/>

                    <LinearLayout
                        android:id="@+id/delete_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_bin"
                            android:layout_gravity="center"
                            />


                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delete"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center"
                            />



                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.01"
                        android:layout_height="match_parent"
                        android:background="@color/background_3"/>

                    <LinearLayout
                        android:id="@+id/view_event"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_view"
                            android:layout_gravity="center"
                            />


                        <com.ztp.app.Helper.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_shift"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center"
                            />



                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>

           <!-- <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/cancel"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                />
-->
        </RelativeLayout>



    </LinearLayout>
