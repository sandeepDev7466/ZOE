<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_back_arrow"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:srcCompat="@drawable/thumbprints"/>

        <com.ztp.app.Helper.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zoe_thumbprint"
            android:textSize="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <com.ztp.app.Helper.MyTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="@string/basic_information"
            android:background="@color/blue_light"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/blue_light"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle_green"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center">

                <com.ztp.app.Helper.MyTextView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/circle"
                    android:textSize="@dimen/_12ssp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <!--<LinearLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_rectangle"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSO"
                        android:textColor="@color/white"/>
                </LinearLayout>
-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:id="@+id/etFirstNameLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight=".5"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:textSize="@dimen/_12ssp" />
                    </com.ztp.app.Helper.MyTextInputLayout>

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:id="@+id/etLastNameLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight=".5">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:textSize="@dimen/_12ssp" />
                    </com.ztp.app.Helper.MyTextInputLayout>

                </LinearLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/etEmailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/etPhoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLength="14"
                        android:textSize="@dimen/_12ssp"
                        android:imeOptions="actionNext"/>
                </com.ztp.app.Helper.MyTextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:background="@drawable/border"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp">


                            <Spinner
                                android:id="@+id/country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                              />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:background="@drawable/border"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp">


                            <Spinner
                                android:id="@+id/state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/city"
                            android:inputType="text"
                            android:textSize="@dimen/_12ssp" />
                    </com.ztp.app.Helper.MyTextInputLayout>

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:id="@+id/etPostalCodeLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etPostalCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/postal_code"
                            android:inputType="number"
                            android:maxLength="5"
                            android:digits="0123456789"
                            android:textSize="@dimen/_12ssp"
                            android:imeOptions="actionNext"/>
                    </com.ztp.app.Helper.MyTextInputLayout>

                </LinearLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:textSize="@dimen/_12ssp"
                        />
                </com.ztp.app.Helper.MyTextInputLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/date_of_birth"
                        android:textSize="@dimen/_12ssp"
                        android:clickable="true"
                        android:editable="false"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:paddingEnd="@dimen/_10sdp"
                        />
                </com.ztp.app.Helper.MyTextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       />


                </LinearLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:passwordToggleEnabled="true">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/etConfirmPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:passwordToggleEnabled="true">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_12ssp" />
                </com.ztp.app.Helper.MyTextInputLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp">

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/clear"
                    style="@style/MyGrayButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:text="@string/clear"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/next"
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

