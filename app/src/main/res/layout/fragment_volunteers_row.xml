<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">


    <com.ztp.app.Helper.MyTextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/tab_booking"
        style="@style/MediumTextView"
        android:gravity="center"/>

    <com.ztp.app.Helper.MyTextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RegularTextView"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/title"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView" />

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_event_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/shift_task"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView" />

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_shift_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/date"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView"/>

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/time"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView" />

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/attended_hrs"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView" />

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_hrs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView"/>
       <!-- android:drawableEnd="@drawable/ic_edit"/-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/email"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView"
            android:gravity="center_vertical"/>

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/RegularTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:text="@string/rank"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rank"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp" />

            <com.ztp.app.Helper.MyTextView
                android:id="@+id/rankText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/RegularTextView"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ztp.app.Helper.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/change_status"
            android:textColor="@color/tab_booking"
            style="@style/RegularTextView"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/imv_status"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="left"
            android:layout_weight="0.2" />

        <com.ztp.app.Helper.MyTextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            style="@style/RegularTextView"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            />

        <ImageView
            android:id="@+id/imv_chat"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_message"
            android:tint="@color/tab_hangout"
            android:visibility="gone"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp" />

</LinearLayout>
