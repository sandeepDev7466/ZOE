<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".View.Activity.Common.LoginActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:src="@drawable/oval_dark" />

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_margin="@dimen/_30sdp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp">

                    <com.ztp.app.Helper.MyHeadingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:textSize="@dimen/_20ssp"
                        android:gravity="center" />

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:id="@+id/etEmailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"/>
                    </com.ztp.app.Helper.MyTextInputLayout>

                    <com.ztp.app.Helper.MyTextInputLayout
                        android:id="@+id/etPasswordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true"
                        android:layout_marginTop="@dimen/_2sdp">

                        <com.ztp.app.Helper.MyTextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password"
                            android:inputType="textPassword"/>
                    </com.ztp.app.Helper.MyTextInputLayout>

                    <com.ztp.app.Helper.MyButton
                        android:id="@+id/login"
                        style="@style/MyButton"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textSize="@dimen/_10ssp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp">

                    <com.ztp.app.Helper.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_to_zoe_thumbprint"
                        android:textSize="@dimen/_6ssp" />

                    <com.ztp.app.Helper.MyTextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:text="@string/register_here"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp">

                    <com.ztp.app.Helper.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:text="@string/forgot_password"
                        android:textSize="@dimen/_6ssp"
                        android:gravity="center"/>

                    <com.ztp.app.Helper.MyTextView
                        android:id="@+id/forget"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15sdp"
                        android:text="@string/click_here"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/thumbprints" />

            <com.ztp.app.Helper.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zoe_thumbprint"
                android:textSize="@dimen/_10ssp"
                android:layout_marginLeft="@dimen/_10sdp" />


        </LinearLayout>

    </FrameLayout>

</ScrollView>
