<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ztp.app.View.Fragment.CSO.Event.TabNewEventFragment"
    >

    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleX="1.6"
                android:src="@drawable/scene_2"/>

            <com.ztp.app.Helper.MyBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/add_event_detail"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <Spinner
                    android:id="@+id/sp_event_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:background="@null" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    app:srcCompat="@drawable/ic_down_arrow" />


            </LinearLayout>



            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_eventname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/event_name"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_event_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/event_descrip"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="50"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <Spinner
                            android:id="@+id/sp_country"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".9"
                            android:background="@null"

                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            app:srcCompat="@drawable/ic_down_arrow" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:layout_weight="50"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <Spinner
                            android:id="@+id/sp_state"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".9"
                            android:background="@null" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            app:srcCompat="@drawable/ic_down_arrow" />


                    </LinearLayout>

                    <!--<Spinner-->
                    <!--android:id="@+id/sp_state"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--</Spinner>-->

                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0.7dp"-->
                    <!--android:layout_marginStart="@dimen/_3sdp"-->
                    <!--android:layout_marginEnd="@dimen/_3sdp"-->
                    <!--android:background="@color/background_3" />-->

                </LinearLayout>


            </LinearLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_zip_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zip"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="number"

                    />
            </com.ztp.app.Helper.MyTextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <Spinner
                    android:id="@+id/sp_time_zone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:background="@null" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".1"
                    app:srcCompat="@drawable/ic_down_arrow" />


            </LinearLayout>

            <!--<Spinner-->
            <!--android:id="@+id/sp_time_zone"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--&gt;-->

            <!--</Spinner>-->
            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.7dp"-->
            <!--android:background="@color/background_3" />-->

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_contact_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contact_name"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_phone_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_no"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="phone"
                    android:maxLength="13"


                    />
            </com.ztp.app.Helper.MyTextInputLayout>

            <com.ztp.app.Helper.MyTextInputLayout
                android:id="@+id/et_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.ztp.app.Helper.MyTextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:textSize="@dimen/_12ssp" />
            </com.ztp.app.Helper.MyTextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                >

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/et_start_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="50"
                    >

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/et_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/start_date"
                        android:textSize="@dimen/_12ssp"
                        android:editable="false"
                        />
                </com.ztp.app.Helper.MyTextInputLayout>

                <com.ztp.app.Helper.MyTextInputLayout
                    android:id="@+id/et_end_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="50">

                    <com.ztp.app.Helper.MyTextInputEditText
                        android:id="@+id/et_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_calendar"
                        android:hint="@string/end_date"
                        android:textSize="@dimen/_12ssp"
                        android:editable="false"

                        />
                </com.ztp.app.Helper.MyTextInputLayout>


            </LinearLayout>


            <com.ztp.app.Helper.MyBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />


            <!--<fragment-->
            <!--android:tag="fragment_map"-->
            <!--android:id="@+id/fragment_map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scaleType="fitCenter"-->
            <!--class="com.ztp.app.View.Fragment.CSO.Event.WorkaroundMapFragment"/>-->


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white">

                <fragment
                    android:id="@+id/fragment_map"
                    class="com.ztp.app.View.Fragment.CSO.Event.WorkaroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:tag="fragment_map"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginRight="-100dp"
                    android:layout_marginTop="-100dp"
                    android:layout_marginBottom="-100dp"
                    />

                <!--<ImageView-->
                <!--android:id="@+id/imageView123"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/temp_transparent" />-->


            </RelativeLayout>

            <!--<com.google.android.gms.maps.MapView-->
            <!--android:id="@+id/map_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:nestedScrollingEnabled="true"-->
            <!--/>-->



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp">

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/clear"
                    style="@style/MyGrayButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:text="@string/clear"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>

                <com.ztp.app.Helper.MyButton
                    android:id="@+id/update"
                    style="@style/MyButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textSize="@dimen/_10ssp"
                    android:layout_weight=".5"
                    android:layout_margin="@dimen/_5sdp"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</FrameLayout>
